<form method="GET" action="/quizes/<%= quiz.id %>/answer">
   <p>Pregunta: <%= quiz.pregunta %>
   <p><input type="text" name="respuesta" value="Respuesta"/>
   <p>Tema: <%= quiz.tema %>
   <p><input type="submit" name="Enviar" value="Enviar"/></p>
</form>
<p><br/><a href="/quizes/<%= quiz.id %>/comments/new"><button type="button">Nuevo comentario</button></a></p>
<p><strong>Comentarios:</strong></p>
<% for (index in quiz.Comments) { %>
   <% if(quiz.Comments[index].publicado || session.user){ %>
      <p>- <%= quiz.Comments[index].texto %></p>
      <% if(session.user && !quiz.Comments[index].publicado){ %>
         <a href="/quizes/<%= quiz.id %>/comments/<%= quiz.Comments[index].id %>/publish"><button type="button">Publicar</button></a>
      <% } %>
   <% } %>
<% } %>
